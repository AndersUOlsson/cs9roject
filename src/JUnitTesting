package cs9roject;

import static org.junit.Assert.*;

import java.time.LocalDate;

import org.junit.Test;

public class JUnitTesting {

	Timeline timeline1 = new Timeline();
	Timeline timeline2 = new Timeline();
	
	// Test U.1 timeline1
	public void timeline1() {
		assertEquals(0, timeline1.getTimelineId());
		}
	
	// Test U.1 timeline2
	public void timeline2() {
		assertEquals(1, timeline2.getTimelineId());
		}
	
	// Test U.1.1
	public void testTitle() {
		Timeline timelinetitle = new Timeline();
		String title = timelinetitle.getTimelineTitle();
		assertTrue(title.length() != 0 && title.length() < 25);
		}

	 // Test U.1.2
	 public void testDuration() {
		 LocalDate dateStart = getStartTime;
		 LocalDate dateEnd = getEndTime;
		 assertFalse(dateStart == dateEnd);
	 }
}
